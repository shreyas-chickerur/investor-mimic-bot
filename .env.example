# Application
APP_NAME="InvestorMimic Bot"
APP_HOST="0.0.0.0"
APP_PORT=8000
DEBUG=True
ENVIRONMENT=development  # or 'production'
SECRET_KEY=your-secret-key-here

# Alpha Vantage API (for news sentiment analysis)
# Get free API key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key-here

# Database
DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/investorbot"

# API Keys (replace with your actual keys)
ALPACA_API_KEY="your_alpaca_api_key"
ALPACA_SECRET_KEY="your_alpaca_secret_key"
ALPACA_PAPER=True  # Set to False for live trading
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # For paper trading

# Trading Settings
PAPER_TRADING=True

# CORS (comma-separated list of allowed origins)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8000"

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10  # MB
LOG_BACKUP_COUNT=5

# Funding Configuration
DEFAULT_ALLOCATION_PERCENT=25.0
MIN_INVESTMENT_AMOUNT=100.00
CASH_BUFFER_AMOUNT=1000.00

# Plaid Configuration (OPTIONAL - only needed for Phase 2 funding workflow)
# Note: If using Alpaca's recurring deposits, you don't need Plaid at all!
# PLAID_CLIENT_ID=your_plaid_client_id
# PLAID_SECRET=your_plaid_secret
# PLAID_ENV=sandbox  # or 'development' or 'production'
# PLAID_ACCESS_TOKEN=access-sandbox-xxx  # Token for your linked bank account

# Alpaca Broker Configuration (ONLY for Broker API accounts)
# Note: Personal trading accounts do NOT have access to the Broker API
# If you have a personal account, skip these - fund manually via dashboard
# ALPACA_ACCOUNT_ID=your_alpaca_account_id  # Only for Broker API
# ALPACA_BANK_ID=your_alpaca_bank_id  # Only for Broker API

# Email Notifications (optional - for alerts and monitoring)
# Configure these to receive email alerts for critical events
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password  # Use app-specific password for Gmail
# ALERT_EMAIL=alerts@example.com,team@example.com  # Comma-separated list

# Slack Webhook (optional - for alerts and monitoring)
# Configure these to receive Slack notifications
# Get webhook URL from: https://api.slack.com/messaging/webhooks
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# SLACK_CHANNEL=#alerts  # Channel to post alerts to
