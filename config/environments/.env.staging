# Staging Environment Configuration
ENVIRONMENT=staging

# Alpaca Trading (Paper Trading)
ALPACA_API_KEY=your_staging_key
ALPACA_SECRET_KEY=your_staging_secret
ALPACA_PAPER=True
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Alpha Vantage
ALPHA_VANTAGE_API_KEY=your_staging_key

# Email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=staging@example.com
SMTP_PASSWORD=your_staging_password
ALERT_EMAIL=staging@example.com

# Database (Staging)
DATABASE_URL=postgresql://postgres:password@staging-db:5432/investorbot_staging

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/staging.log

# Feature Flags
ENABLE_REAL_TRADING=False
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_MONITORING=True

# Rate Limiting
API_RATE_LIMIT=200
API_RATE_WINDOW=60

# Cache
REDIS_URL=redis://staging-redis:6379/0
CACHE_TTL=600
