# Production Environment Configuration
ENVIRONMENT=production

# Alpaca Trading (LIVE TRADING - USE WITH CAUTION)
ALPACA_API_KEY=your_prod_key
ALPACA_SECRET_KEY=your_prod_secret
ALPACA_PAPER=False
ALPACA_BASE_URL=https://api.alpaca.markets

# Alpha Vantage
ALPHA_VANTAGE_API_KEY=your_prod_key

# Email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=prod@example.com
SMTP_PASSWORD=your_prod_password
ALERT_EMAIL=prod@example.com

# Database (Production)
DATABASE_URL=postgresql://postgres:secure_password@prod-db:5432/investorbot_prod

# Logging
LOG_LEVEL=WARNING
LOG_FILE=logs/production.log

# Feature Flags
ENABLE_REAL_TRADING=True
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_MONITORING=True

# Rate Limiting
API_RATE_LIMIT=500
API_RATE_WINDOW=60

# Cache
REDIS_URL=redis://prod-redis:6379/0
CACHE_TTL=900

# Monitoring
SENTRY_DSN=your_sentry_dsn
DATADOG_API_KEY=your_datadog_key
